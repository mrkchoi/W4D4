  <%= form_auth %>
  
  <label>Email:
    <input type="text" name="user[email]">
  </label>

  <br><br>

  <label>Password:
    <input type="password" name="user[password]">
  </label>

  <br><br>
  <input type="submit" value="Sign Up" class="ui button primary">
</form>